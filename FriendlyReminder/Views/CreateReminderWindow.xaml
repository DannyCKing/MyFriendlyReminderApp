<Window x:Class="FriendlyReminder.Views.CreateReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendlyReminder.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#F4F7FB"
        WindowStyle="None"
        Title="Create Reminder" Height="600" Width="800">
    <Window.Resources>
        <!-- Primary button style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#4A90E2" />
            <Setter Property="BorderThickness" Value="10" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A7BCD" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2F66A3" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary button (e.g. cancel) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#BDC3C7" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A0A7AD" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#80878D" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title label -->
            <RowDefinition Height="Auto"/>
            <!-- Title input -->
            <RowDefinition Height="Auto"/>
            <!-- Description label -->
            <RowDefinition Height="*"/>
            <!-- Description input -->
            <RowDefinition Height="Auto"/>
            <!-- Time label -->
            <RowDefinition Height="Auto"/>
            <!-- Preset buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Custom time -->
            <RowDefinition Height="Auto"/>
            <!-- Custom Sound -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom buttons -->
        </Grid.RowDefinitions>

        <!-- Reminder Title Label -->
        <TextBlock Text="Reminder Title"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,5" />

        <!-- Reminder Title Input -->
        <TextBox x:Name="TitleTextBox"
                 Grid.Row="1"
                 FontSize="18"
                 Padding="8"
                 Margin="0,0,0,10"
                 Background="White"
                 BorderBrush="#D0D6E0"
                 BorderThickness="1"/>

        <!-- Reminder Description Label -->
        <TextBlock Grid.Row="2"
                   Text="Reminder Description"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,10,0,5"/>

        <!-- Reminder Description Input -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                BorderBrush="#D0D6E0"
                BorderThickness="1"
                Padding="8"
                Margin="0,0,0,10">
            <TextBox x:Name="DescriptionTextBox"
                     FontSize="16"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     BorderThickness="0"
                     VerticalScrollBarVisibility="Auto"/>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="4">
            <!-- Time Selection Label -->
            <TextBlock 
                   Text="When should this reminder trigger?"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,10,0,5" />

            <TextBlock 
                x:Name="TimeErrorLabel"
                   Text="Please select a valid time"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="Red"
                   Margin="10,10,0,5" />
        </StackPanel>


        <!-- Preset Time Buttons -->
        <WrapPanel Grid.Row="5"
                   Margin="0,0,0,10">
            <Button x:Name="OneMinuteButton"
                    Content="1 min"
                    CommandParameter="1"
                    Width="80"
                    Style="{StaticResource PrimaryButtonStyle}" Click="OneMinuteButton_Click" />
            <Button x:Name="FiveMinuteButton"
                    Content="5 min"
                    CommandParameter="5"
                    Width="80"
                    Style="{StaticResource PrimaryButtonStyle}" Click="FiveMinuteButton_Click" />
            <Button x:Name="TenMinuteButton"
                    Content="10 min"
                    CommandParameter="10"
                    Width="80"
                    Style="{StaticResource PrimaryButtonStyle}" Click="TenMinuteButton_Click" />
            <Button x:Name="FifteenMinuteButton"
                    Content="15 min"
                    CommandParameter="15"
                    Width="80"
                    Style="{StaticResource PrimaryButtonStyle}" Click="FifteenMinuteButton_Click" />
            <Button x:Name="ThirtyMinuteButton"
                    Content="30 min"
                    CommandParameter="30"
                    Width="80"
                    Style="{StaticResource PrimaryButtonStyle}" Click="ThirtyMinuteButton_Click" />
            <Button x:Name="CustomTimeButton"
                    Content="Custom"
                    CommandParameter="CUSTOM"
                    Width="80"
                    Style="{StaticResource PrimaryButtonStyle}" Click="CustomTimeButton_Click" />
        </WrapPanel>

        <!-- Custom Time Input -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <TextBlock Text="Custom time:" x:Name="CustomTimeLabel"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="#333"
                       Margin="0,0,10,0" />

            <TextBox x:Name="CustomTimeValueTextBox"
                     Width="80"
                     FontSize="16"
                     Padding="5"
                     Margin="0,0,10,0"
                     Background="White"
                     BorderBrush="#D0D6E0"
                     BorderThickness="1" />

            <ComboBox x:Name="CustomTimeUnitComboBox"
                      Width="130"
                      FontSize="16"
                      Padding="5"
                      Background="White"
                      BorderBrush="#D0D6E0"
                      BorderThickness="1">
                <ComboBoxItem Content="Minutes" IsSelected="True"/>
                <ComboBoxItem Content="Seconds"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="7"
            Orientation="Horizontal" Margin="0,20,0,20"
            VerticalAlignment="Center">
            <TextBlock Text="Sound:" 
               VerticalAlignment="Center"
               FontSize="16"
               Foreground="#333"
               Margin="0,0,10,0" />


            <ComboBox x:Name="SoundComboBox"
              Width="130"
              FontSize="16"
              Padding="1"
                      Height="25"
              Background="White"
              BorderBrush="#D0D6E0"
              BorderThickness="1">
                <ComboBoxItem Content="None" IsSelected="True"/>
                <ComboBoxItem Content="Door Bell"/>
                <ComboBoxItem Content="Plunk"/>
                <ComboBoxItem Content="Ding"/>
            </ComboBox>
            <Button x:Name="TestSoundButton"
                    Content="Play Sound"
                    Width="120"
                    Height="20"
                    Style="{StaticResource PrimaryButtonStyle}" Click="TestSoundButton_Click"  />
        </StackPanel>

        <!-- Bottom Buttons (Create / Cancel) -->
        <StackPanel Grid.Row="8"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="120"
                    Style="{StaticResource SecondaryButtonStyle}" Click="CancelButton_Click" />
            <Button x:Name="CreateButton"
                    Content="Create Reminder"
                    Width="160"
                    Style="{StaticResource PrimaryButtonStyle}" Click="CreateButton_Click" />
        </StackPanel>
    </Grid>
</Window>
